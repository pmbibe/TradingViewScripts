// ============ VOLUME CONFIRMATION FUNCTIONS ============
// @function            Check if current bar has high volume (above avg * multiplier)
// @returns             bool
isHighVolumeBar() => showVolumeFilterInput ? isHighVolume : true

// @function            Check if volume is confirmed (above average)
// @returns             bool
isVolumeConfirmedBar() => showVolumeFilterInput ? isVolumeConfirmed : true

// ============ MULTI-CANDLE CONFIRMATION FUNCTIONS ============
// @function            Check if breakout is confirmed over multiple bars
// @param level         Price level to check
// @param bullish       true for bullish breakout (close > level)
// @param bars          Number of bars to confirm
// @returns             bool
isConfirmedBreakout(float level, bool bullish, int bars) =>
    if bars <= 1
        bullish ? close > level : close < level
    else
        confirmed = true
        for i = 0 to bars - 1
            if bullish
                if close[i] <= level
                    confirmed := false
                    break
            else
                if close[i] >= level
                    confirmed := false
                    break
        confirmed

// ============ ORDER BLOCK SCORING FUNCTIONS ============
// @function            Calculate Order Block quality score
// @param idx           Bar index of the Order Block
// @param bias          BULLISH or BEARISH
// @returns             float (0-100)
calcOBScore(int idx, int bias) =>
    // Volume Score (0-30): Higher volume = higher score
    volRatio = nz(volume[bar_index - idx] / avgVolume, 1.0)
    volumeScore = math.min(30.0, volRatio * 15.0)

    // Body Ratio Score (0-20): Larger body relative to range = stronger OB
    barRange = high[bar_index - idx] - low[bar_index - idx]
    bodySize = math.abs(close[bar_index - idx] - open[bar_index - idx])
    bodyRatio = barRange > 0 ? bodySize / barRange : 0
    bodyScore = bodyRatio * 20.0

    // Trend Alignment Score (0-25): OB aligned with regime
    trendScore = 0.0
    if useRegimeFilterInput
        if (bias == BULLISH and currentRegime >= 0) or (bias == BEARISH and currentRegime <= 0)
            trendScore := 25.0
        else if currentRegime == 0
            trendScore := 15.0
    else
        trendScore := 25.0

    // Imbalance/FVG Proximity Score (0-25): Check if there's an FVG nearby
    imbalanceScore = 0.0
    lookbackBars = math.min(5, bar_index - idx)
    for i = 0 to lookbackBars
        checkIdx = bar_index - idx - i
        if checkIdx >= 2
            // Check for bullish FVG pattern
            if low[checkIdx] > high[checkIdx + 2]
                imbalanceScore := 25.0
                break
            // Check for bearish FVG pattern
            if high[checkIdx] < low[checkIdx + 2]
                imbalanceScore := 25.0
                break

    math.round(volumeScore + bodyScore + trendScore + imbalanceScore, 1)

// ============ ADAPTIVE FVG FUNCTIONS ============
// @function            Calculate adaptive FVG threshold based on recent volatility
// @returns             float
adaptiveFVGThreshold() =>
    recentVolatility = ta.stdev(close, 20) / ta.sma(close, 20) * 100
    baseThreshold = 0.1
    // Higher volatility = higher threshold
    baseThreshold * (1 + recentVolatility / 2)

// @function            Calculate FVG strength score
// @param gapSize       Size of the gap
// @param bias          BULLISH or BEARISH
// @returns             float (0-100)
calcFVGStrength(float gapSize, int bias) =>
    // Size Score (0-40): Larger gap relative to ATR = stronger
    sizeRatio = gapSize / atrMeasure
    sizeScore = math.min(40.0, sizeRatio * 40.0)

    // Volume Score (0-30): Higher volume = stronger FVG
    volRatio = volume / avgVolume
    volumeScore = math.min(30.0, volRatio * 15.0)

    // Trend Alignment Score (0-30)
    trendScore = 0.0
    if useRegimeFilterInput
        if (bias == BULLISH and currentRegime >= 0) or (bias == BEARISH and currentRegime <= 0)
            trendScore := 30.0
        else if currentRegime == 0
            trendScore := 15.0
    else
        trendScore := 30.0

    math.round(sizeScore + volumeScore + trendScore, 1)

// ============ TOUCH COUNT FUNCTIONS ============
// @function            Count how many times price touched a level
// @param level         Price level to check
// @param lookback      Number of bars to look back
// @param tolerance     Tolerance as ATR multiplier
// @returns             int
countTouches(float level, int lookback, float tolerance) =>
    touches = 0
    tolerancePrice = atrMeasure * tolerance
    for i = 1 to lookback
        // Check if price came close to level
        if math.abs(high[i] - level) <= tolerancePrice or math.abs(low[i] - level) <= tolerancePrice
            touches += 1
    touches

// ============ SWING DEPTH FUNCTION ============
// @function            Calculate swing depth in ATR units
// @param swingPrice    Swing high or low price
// @param isHigh        true for swing high, false for swing low
// @param lookback      Number of bars to check
// @returns             float
calcSwingDepth(float swingPrice, bool isHigh, int lookback) =>
    if isHigh
        lowestAfter = ta.lowest(low, lookback)
        (swingPrice - lowestAfter) / atrMeasure
    else
        highestAfter = ta.highest(high, lookback)
        (highestAfter - swingPrice) / atrMeasure

// @function            Get the value of the current leg, it can be 0 (bearish) or 1 (bullish)
// @param size          Number of bars for swing detection
// @returns             int
leg(int size) =>
    var leg     = 0
    newLegHigh  = high[size] > ta.highest(size)
    newLegLow   = low[size]  < ta.lowest(size)

    // Enhanced: Check swing depth if enabled
    swingDepthOk = true
    if minSwingDepthInput > 0
        if newLegHigh
            // For swing high, check depth to the lowest point after
            swingDepth = calcSwingDepth(high[size], true, size)
            swingDepthOk := swingDepth >= minSwingDepthInput
        else if newLegLow
            // For swing low, check depth to the highest point after
            swingDepth = calcSwingDepth(low[size], false, size)
            swingDepthOk := swingDepth >= minSwingDepthInput

    if newLegHigh and swingDepthOk
        leg := BEARISH_LEG
    else if newLegLow and swingDepthOk
        leg := BULLISH_LEG
    leg

// @function            Identify whether the current value is the start of a new leg (swing)
// @param leg           (int) Current leg value
// @returns             bool
startOfNewLeg(int leg)      => ta.change(leg) != 0

// @function            Identify whether the current level is the start of a new bearish leg (swing)
// @param leg           (int) Current leg value
// @returns             bool
startOfBearishLeg(int leg)  => ta.change(leg) == -1

// @function            Identify whether the current level is the start of a new bullish leg (swing)
// @param leg           (int) Current leg value
// @returns             bool
startOfBullishLeg(int leg)  => ta.change(leg) == +1

